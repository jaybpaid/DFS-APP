# DFS Optimizer Environment Configuration
# Copy this file to .env and fill in your API keys

# =================================
# MCP Server Configuration
# =================================

# Brave Search API (for web research and data gathering)
BRAVE_API_KEY=your_brave_api_key_here

# GitHub API (for code management and version control)
GITHUB_TOKEN=your_personal_access_token_here

# Apify API (for web scraping and data extraction)
APIFY_TOKEN=your_apify_api_token_here

# Slack API (for notifications and team communication)
SLACK_BOT_TOKEN=your_slack_bot_token_here

# Firecrawl API (for advanced web crawling, if enabled)
FIRECRAWL_API_KEY=your_firecrawl_key_if_required

# Google Maps API (for location-based features, if enabled)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =================================
# DFS Data Providers
# =================================

# SportsDataIO (official sports data)
SPORTSDATAIO_API_KEY=your_sportsdataio_key

# FantasyNerds (projections and ownership)
FANTASYNERDS_API_KEY=your_fantasynerds_key

# The Odds API (betting lines and totals)
ODDS_API_KEY=your_odds_api_key

# Weather API (for outdoor sports)
WEATHER_API_KEY=your_weather_api_key

# =================================
# Database Configuration
# =================================

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# PostgreSQL (for data persistence)
DATABASE_URL=postgres://dfs:dfs@localhost:5432/dfs

# SQLite (alternative for development)
SQLITE_PATH=./data/dfs.db

# =================================
# Application Configuration
# =================================

# Environment
NODE_ENV=development

# Server ports
API_PORT=8000
WEB_PORT=3000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# =================================
# DFS Site Integration
# =================================

# Note: DraftKings and FanDuel public endpoints don't require auth
# Respect rate limits and terms of service

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30000

# =================================
# AI/ML Configuration
# =================================

# OpenAI (for AI analysis)
OPENAI_API_KEY=your_openai_key

# Anthropic Claude (for strategic analysis)
ANTHROPIC_API_KEY=your_anthropic_key

# =================================
# Monitoring & Logging
# =================================

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn

# Log level
LOG_LEVEL=info

# =================================
# Feature Flags
# =================================

# Enable/disable features
ENABLE_LIVE_DATA=true
ENABLE_AI_ANALYSIS=true
ENABLE_MONTE_CARLO=true
ENABLE_LATE_SWAP=true
ENABLE_MULTI_SITE=true
