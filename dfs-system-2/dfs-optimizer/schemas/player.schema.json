{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "player.schema.json",
  "type": "object",
  "required": [
    "playerId",
    "name",
    "team",
    "pos",
    "site",
    "sport",
    "slateId",
    "salary",
    "projection"
  ],
  "properties": {
    "playerId": { "type": "string" },
    "name": { "type": "string" },
    "team": { "type": "string" },
    "opp": { "type": "string" },
    "pos": { "type": "array", "items": { "type": "string" } },
    "site": { "enum": ["DK", "FD"] },
    "sport": { "enum": ["NFL", "NBA", "MLB", "MMA", "CFB", "NASCAR", "NHL", "PGA"] },
    "slateId": { "type": "string" },
    "salary": { "type": "number", "minimum": 0 },
    "status": { "enum": ["ACTIVE", "OUT", "Q", "D", "GTD"] },
    "projection": { "type": "number" },
    "stdev": { "type": "number" },
    "ceiling": { "type": "number" },
    "floor": { "type": "number" },
    "ownership": { "type": "number", "minimum": 0, "maximum": 1 },
    "value": { "type": "number" },
    "boom": { "type": "number", "minimum": 0, "maximum": 1 },
    "leverage": { "type": "number" },
    "meta": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
