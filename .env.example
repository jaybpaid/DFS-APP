# DFS Gateway Configuration
# Copy this file to .env and configure your environment variables

# Gateway Configuration
LOG_LEVEL=INFO
ENABLE_HEALTH=true
HEALTH_PORT=8080
ENABLE_METRICS=true
METRICS_PORT=9090

# Database Configuration
DATABASE_URL=postgresql://dfs_user:dfs_password_2024@localhost:5432/dfs_optimizer

# Redis Configuration (Optional - enables caching and rate limiting)
REDIS_URL=redis://localhost:6379

# API Keys (Required for external services)
BRAVE_API_KEY=your_brave_api_key_here
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
TAVILY_API_KEY=your_tavily_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter Configuration (for additional AI models)
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# External Servers (comma-separated list of shim paths)
EXTERNAL_SERVERS=./shims/brave-search.sh,./shims/puppeteer.sh,./shims/filesystem.sh,./shims/memory.sh,./shims/github.sh

# Application Servers (comma-separated list of application paths)
APP_SERVERS=./mcp-servers/dfs-mcp/dist/index.js,./apps/api-python/main.py

# Cache Configuration
CACHE_SIZE=1000

# Request Timeouts (in milliseconds)
REQUEST_TIMEOUT=5000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Node.js Configuration
NODE_ENV=production
NODE_OPTIONS="--max-old-space-size=4096"

# Python Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Prometheus Metrics Labels (for filtering)
METRICS_LABEL_ENV=development
METRICS_LABEL_SERVICE=dfs-gateway
