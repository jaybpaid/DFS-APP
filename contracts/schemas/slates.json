{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DFS Slates Schema",
  "description": "Schema for DraftKings slate selection and date-based queries",
  "required": ["date", "slates"],
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "description": "Query date (YYYY-MM-DD)"
    },
    "slates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "sport", "contestType", "startTime", "salaryCap"],
        "properties": {
          "id": {
            "type": "string",
            "description": "DraftKings slate ID"
          },
          "name": {
            "type": "string",
            "description": "Slate display name"
          },
          "sport": {
            "type": "string",
            "enum": ["NFL", "NBA"],
            "description": "Sport type"
          },
          "contestType": {
            "type": "string",
            "enum": ["classic", "showdown", "tiers", "arcade"],
            "description": "Contest format"
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "Contest start time"
          },
          "salaryCap": {
            "type": "integer",
            "minimum": 30000,
            "maximum": 60000,
            "description": "Salary cap for lineup"
          },
          "rosterPositions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Required roster positions"
          },
          "playerCount": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of available players"
          },
          "games": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["homeTeam", "awayTeam", "kickoff"],
              "properties": {
                "homeTeam": { "type": "string" },
                "awayTeam": { "type": "string" },
                "kickoff": { "type": "string", "format": "date-time" },
                "status": {
                  "type": "string",
                  "enum": ["upcoming", "live", "completed"]
                }
              }
            }
          },
          "entryFee": {
            "type": "string",
            "pattern": "^\\$[0-9]+(\\.[0-9]{2})?$"
          },
          "totalPrizes": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["active", "upcoming", "closed", "completed"]
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "totalSlates": {
          "type": "integer",
          "minimum": 0
        },
        "source": {
          "type": "string",
          "description": "Data source (e.g., 'draftkings_api')"
        }
      }
    }
  }
}
