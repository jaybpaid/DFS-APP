{
  "mcpServers": {
    "dfs-gateway": {
      "command": "./shims/mcp-gateway.sh",
      "args": [],
      "env": {
        "LOG_LEVEL": "INFO",
        "ENABLE_HEALTH": "true",
        "HEALTH_PORT": "8080",
        "ENABLE_METRICS": "true",
        "METRICS_PORT": "9090",
        "REDIS_URL": "redis://localhost:6379",
        "DATABASE_URL": "postgresql://dfs_user:dfs_password_2024@localhost:5432/dfs_optimizer",
        "EXTERNAL_SERVERS": "./shims/brave-search.sh,./shims/puppeteer.sh,./shims/filesystem.sh,./shims/memory.sh,./shims/github.sh",
        "APP_SERVERS": "./mcp-servers/dfs-mcp/dist/index.js,./apps/api-python/main.py",
        "BRAVE_API_KEY": "${BRAVE_API_KEY}",
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "docker-hub": {
      "command": "node",
      "args": ["./docker-hub-mcp-server/dist/index.js", "--transport=stdio"]
    }
  }
}
